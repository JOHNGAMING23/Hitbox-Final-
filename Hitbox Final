local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()
local Window = OrionLib:MakeWindow({
    Name = "Petlog script",
    HidePremium = false,
    IntroText = "English or Spanish",
    SaveConfig = true,
    ConfigFolder = "Petlog script"
})

OrionLib:MakeNotification({
    Name = "Athan punch johnny sins",
    Content = "To meet Baltamod",
    Image = "rbxassetid://4483345998",
    Time = 25
})

local Tab = Window:MakeTab({
    Name = "Supporting Games",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local Section = Tab:AddSection({
    Name = "100% Working in Unnamed shooter"
})

Section = Tab:AddSection({
    Name = "100% Working in Trench War"
})

Section = Tab:AddSection({
    Name = "100% Working in No scope"
})

Section = Tab:AddSection({
    Name = "100% Working in [FPS]Gun Grounds FFA"
})

local Tab2 = Window:MakeTab({
    Name = "About Walkspeed",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local Section2 = Tab2:AddSection({
    Name = "Subscribe To john_paquito"
})

-- Button to change WalkSpeed
Tab2:AddButton({
    Name = "Button!",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 200
    end    
})

-- Walk speed editor
Tab2:AddTextbox({
    Name = "Edit WalkSpeed",
    Default = "00", -- Default Roblox walk speed
    TextDisappear = true,
    Callback = function(value)
        local speed = tonumber(value)
        if speed then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speed
            OrionLib:MakeNotification({
                Name = "Speed Changed",
                Content = "WalkSpeed set to " .. speed,
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        else
            OrionLib:MakeNotification({
                Name = "Error",
                Content = "Please enter a valid number",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    end
})

-- Infinite jump toggle (corrected)
Section2:AddToggle({
    Name = "Infinite Jumps",
    Default = false,
    Callback = function(state)
        local InfiniteJumpEnabled = state
        game:GetService("UserInputService").JumpRequest:Connect(function()
            if InfiniteJumpEnabled then
                game:GetService("Players").LocalPlayer.Character:FindFirstChildOfClass('Humanoid'):ChangeState("Jumping")
            end
        end)
    end    
})

-- New tab for scripts
local Tab3 = Window:MakeTab({
    Name = "Scripts",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local Tab3Section = Tab3:AddSection({
    Name = "Script Hub"
